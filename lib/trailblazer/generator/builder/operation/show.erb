class <%= model %>::<%= action %> < Trailblazer::Operation
<%= "\n"%>
<%- if options[:present] %>
  class Present < Trailblazer::Operation
    step Model( <%= model %>, :<%= step_action %> )
    step Contract::Build( constant: Form::Create )
  end
<%= "\n"%>
<%- else %>
  step Model( <%= model %>, :<%= step_action %> )
  step Contract::Build( constant: Form::Create )
<% end %>

<%- if options[:present] %>
  step Nested( Present )
<% end %>
  step Contract::Validate()
  step Contract::Persist()

end
